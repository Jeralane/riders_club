= form_with(model: chapter, local: true) do |form|
  - if chapter.errors.any?
    #error-explanation
      %h2
        = pluralize(chapter.errors.count, "error")
        prohibited this chapter from being saved:
      %ul
        - chapter.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :area
    = form.text_field :area, id: :chapter_area, class: 'form-control'
  .form-group
    = form.label :club_id
    = form.text_field :club_id, id: :chapter_club_id, class: 'form-control'
  .checkbox
    %label
      = form.check_box :main, id: :chapter_main
      Main
  .actions
    = form.submit class: 'btn btn-primary'
